{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "./node_modules/@types/",
            "./node_modules/@types/node"
        ],
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}